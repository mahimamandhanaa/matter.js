/* Configuration for a distribution */
{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist/cjs",
    "module": "CommonJS",
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": true, // Link from type definition (.d.ts) to source .ts for code navigation
    "sourceMap": true, // Link from compiled .js to source .ts for debugging
  },
  "include": ["src/**/*.ts"],
}
